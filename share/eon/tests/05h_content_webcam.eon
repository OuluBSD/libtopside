machine sdl.app:
	
	driver context:
		sdl.context
	
	chain program:
		loop center.webcam:
			id = "cam"
			center.customer
			center.video.webcam[][id == "texture"]:
				vflip = "true"
		
		loop ogl.fbo.tex:
			id = "texture"
			ogl.customer
			sdl.ogl.fbo.image[id == "cam"][id == "screen"]
		
		loop ogl.fbo.screen:
			id = "screen"
			ogl.customer
			sdl.fbo[id == "texture"]:
				shader.frag.path = "shaders/toys/simple/simple_webcam/stage0.glsl"
